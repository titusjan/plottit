            sidebarurl="chrome://xulschoolhello/content/sidebar.xul"
            sidebartitle="&xulschoolhello.sidebar.title;"
            oncommand="toggleSidebar('xulschoolhello-sidebar');" />
     -->
      </menupopup>
    </menu>
  </menupopup>
  
